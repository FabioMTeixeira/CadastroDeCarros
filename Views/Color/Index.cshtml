@model IEnumerable<ColorViewModel>

@{
    ViewData["Title"] = "Lista de Cores";
}

<a class="nav-link text-dark btn btn-primary" asp-area="" asp-controller="Color" asp-action="Create">Cadastrar Cores</a>


<div class="container">
    <h1>Cores</h1>

    <form method="post">
        <div class="form-group">
            <input type="text" class="form-control" id="search" name="search" placeholder="Digite para pesquisar...">
        </div>
        <button type="submit" class="btn btn-primary">Pesquisar</button>
    </form>

    <table class="table table-striped">
        <thead>
            <tr>
                <th scope="col">ID</th>
                <th scope="col">Descrição</th>
                <th scope="col">Status</th>
                <th scope="col"></th>

            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Id</td>
                    <td>@item.Descricao</td>
                    <td>@item.Status</td>
                    <td>
                        <div class="btn-group" role="group">
                            <a class="nav-link text-dark btn btn-success" asp-route-id="@item.Id" asp-area="" asp-controller="Color" asp-action="Edit">Editar</a>
                            <a class="nav-link text-dark btn btn-danger" asp-route-id="@item.Id" asp-area="" asp-controller="Color" asp-action="Delete">Excluir</a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

